<Window x:Class="Assignment_5.Views.StartWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Welcome to Victors Blackjack game!" Height="185" Width="300" ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen">

    <Grid Margin="0 0 0 0">
        <Label Content="Enter your name:" 
               HorizontalAlignment="Left" Margin="68,26,0,0" 
               VerticalAlignment="Top" Width="142"/>
        <StackPanel>
            <TextBox VerticalAlignment="Center"
                     Width="150"
                     Margin="0 50 0 0">
                <TextBox.Text>
                    <Binding Path="Name" />
                </TextBox.Text>
            </TextBox>

            <Label Content="Enter starting money:" 
                   HorizontalAlignment="Left" Margin="68 0 0 0" 
                   VerticalAlignment="Top" Width="142"/>

            <TextBox Width="150"
                     Margin="0 5 0 0">
                <TextBox.Text>
                    <Binding Path="Money"/>
                </TextBox.Text>
            </TextBox>
        </StackPanel>

        <Button Command="{ Binding StartCommand }" 
                IsDefault="True" 
                Content="Play!" 
                HorizontalAlignment="Center" 
                Margin="0 125 0 0" 
                VerticalAlignment="Top" 
                Width="75" />
    </Grid>

</Window>
